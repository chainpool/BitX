{
  "name": "app",
  "productName": "app",
  "version": "1.0.0",
  "description": "BitX",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --debug",
    "start:watch": "nodemon --watch ./src/**/* --exec electron . --debug",
    "pack": "electron-builder --dir",
    "dist": "rimraf dist && electron-builder"
  },
  "keywords": [],
  "author": "myapp",
  "license": "MIT",
  "build": {
    "appId": "myapp",
    "files": [
      "**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "category": "finance"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://mybitx.com/electron_update/"
      }
    ]
  },
  "dependencies": {
    "bignumber.js": "^8.1.1",
    "bip32": "^1.0.4",
    "bip38": "^2.0.2",
    "bip39": "^3.0.1",
    "bitcoinjs-lib": "^5.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.0.6",
    "mkdirp": "^0.5.1"
  },
  "devDependencies": {
    "electron": "^5.0.0",
    "electron-builder": "^20.38.3",
    "nodemon": "^1.18.8",
    "rimraf": "^2.6.2"
  }
}
